<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/class_img"
        android:layout_width="120dp"
        android:layout_height="160dp" />

    <LinearLayout
        android:layout_toRightOf="@+id/class_img"
        android:layout_alignBottom="@+id/class_img"
        android:layout_alignTop="@+id/class_img"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/class_title"
            android:textSize="14sp"
            android:textColor="@color/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/class_seat"
                android:padding="3dp"
                android:textColor="#FFF"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"/>

            <TextView
                android:id="@+id/class_state"
                android:padding="3dp"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/yellow"/>

        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/class_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_content"
            />

        <TextView
            android:id="@+id/class_theatre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_content"
            />

        <TextView
            android:id="@+id/class_price"
            android:textColor="@color/text_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/class_summery"
        android:layout_below="@+id/class_img"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:textColor="@color/text_title"
        android:layout_marginTop="10dp"
        android:background="@color/hint_bg"
        android:layout_height="wrap_content" />

</RelativeLayout>